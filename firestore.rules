rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdministrator() {
      return getUserData(request.auth.uid).role == 'Administrator';
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isAdministrator() || isOwner(userId);
      allow write: if isAdministrator();
    }

    match /policies/{policyId} {
      allow read, write: if isAdministrator() || getUserData(request.auth.uid).department == 'Business Development' || getUserData(request.auth.uid).department == 'Premium Administration' || getUserData(request.auth.uid).department == 'Underwriting';
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdministrator(department) {
      let userData = getUserData(request.auth.uid);
      return userData.role == 'Administrator' && userData.department == department;
    }
    
    function isSuperAdmin() {
      return getUserData(request.auth.uid).role == 'Super Admin';
    }

    match /users/{userId} {
      allow read: if isSuperAdmin() || isAdministrator(getUserData(userId).department) || isOwner(userId);

      allow create: if isOwner(userId) && (
        request.resource.data.role != 'Super Admin' ||
        request.auth.token.email == 'offixaps@gmail.com'
      );
      
      allow update: if isSuperAdmin() || (isAdministrator(getUserData(userId).department) && request.resource.data.department == getUserData(request.auth.uid).department) || isOwner(userId);
      
      allow delete: if isSuperAdmin() || isAdministrator(getUserData(userId).department);
    }

    match /policies/{policyId} {
      allow read, write: if isSuperAdmin() || isAdministrator(resource.data.department) || request.auth != null;
    }

    match /roles/{roleId} {
        allow read: if isSuperAdmin() || request.auth != null;
        allow write: if isSuperAdmin() || isAdministrator();
    }
  }
}

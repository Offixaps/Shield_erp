
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdministrator() {
      return getUserData(request.auth.uid).role == 'Administrator';
    }
    
    function isSuperAdmin() {
      return getUserData(request.auth.uid).role == 'Super Admin';
    }

    match /users/{userId} {
      allow read: if isSuperAdmin() || isAdministrator() || isOwner(userId);
      allow create: if isOwner(userId); // Allow any user to create their own user document
      allow update: if isSuperAdmin() || isAdministrator() || isOwner(userId); // Allow user to update their own profile
      allow delete: if isSuperAdmin() || isAdministrator(); // Only admins can delete users
    }

    match /policies/{policyId} {
      allow read, write: if isSuperAdmin() || request.auth != null;
    }

    match /roles/{roleId} {
        allow read: if isSuperAdmin() || request.auth != null;
        allow write: if isSuperAdmin() || isAdministrator();
    }
  }
}
